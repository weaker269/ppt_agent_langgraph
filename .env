# PPT智能体环境配置文件
# 请根据实际情况修改以下配置

# ================================
# AI模型配置
# ================================

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Google AI配置（可选）
GOOGLE_API_KEY=AIzaSyCDt_aF4JjqqX9_jqRx8Bah9XEUkgA4uAs
GOOGLE_MODEL=gemini-2.5-pro

# 默认使用的模型提供商：openai 或 google
DEFAULT_MODEL_PROVIDER=google

# ================================
# 生成参数配置
# ================================

# 滑动窗口大小（保持上下文的幻灯片数量）
SLIDING_WINDOW_SIZE=3

# 质量阈值（0.0-1.0，低于此值将重新生成）
QUALITY_THRESHOLD=0.8

# 最大重试次数
MAX_RETRY_COUNT=3

# 每个章节最大幻灯片数
MAX_SLIDES_PER_SECTION=8

# ================================
# 输出配置
# ================================

# 结果保存目录
RESULTS_DIR=results

# 日志保存目录
LOGS_DIR=logs

# 默认输出文件名前缀
OUTPUT_PREFIX=presentation

# 是否自动打开生成的HTML文件
AUTO_OPEN_HTML=true

# ================================
# 样式配置
# ================================

# 默认样式主题：professional, modern, creative, academic, minimal
DEFAULT_THEME=professional

# 自定义字体（可选）
CUSTOM_FONT_FAMILY=Microsoft YaHei, Arial, sans-serif

# 自定义主色调（可选）
CUSTOM_PRIMARY_COLOR=#2C3E50

# ================================
# 性能配置
# ================================

# AI模型调用超时时间（秒）
MODEL_TIMEOUT=60

# 单次生成最大Token数
MAX_TOKENS=65536

# 生成温度（0.0-1.0，越高越有创意）
GENERATION_TEMPERATURE=0.7

# ================================
# 调试配置
# ================================

# 日志级别：DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 是否保存中间结果
SAVE_INTERMEDIATE_RESULTS=false

# 是否启用详细日志
VERBOSE_LOGGING=false

# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=true

# ================================
# 模板配置
# ================================

# 模板目录
TEMPLATES_DIR=src/agent/renderers/templates

# Reveal.js CDN地址（可自定义）
REVEAL_JS_CDN=https://cdn.jsdelivr.net/npm/reveal.js@4.3.1

# ================================
# 安全配置
# ================================

# 是否允许执行自定义脚本
ALLOW_CUSTOM_SCRIPTS=false

# 最大输入文件大小（MB）
MAX_INPUT_FILE_SIZE=10

# 允许的输入文件类型
ALLOWED_FILE_TYPES=txt,md,docx

# ================================
# 实验性功能配置
# ================================

# 是否启用并发生成（实验性，当前版本不推荐）
ENABLE_CONCURRENT_GENERATION=false

# 是否启用AI评价机制（实验性，已替换为质量反思机制）
ENABLE_AI_EVALUATION=false

# 是否启用自动润色
ENABLE_AUTO_POLISH=true

# ================================
# 质量反思机制配置 (Phase2新增)
# ================================

# 是否启用质量反思机制
ENABLE_QUALITY_REFLECTION=true

# 质量评分阈值（0-100分）
QUALITY_THRESHOLD=85

# 最大反思重试次数
MAX_REFLECTION_RETRY=3

# 质量评估维度（逗号分隔）
REFLECTION_DIMENSIONS=logic,relevance,language,layout

# 各维度权重配置
QUALITY_WEIGHT_LOGIC=0.30
QUALITY_WEIGHT_RELEVANCE=0.25
QUALITY_WEIGHT_LANGUAGE=0.25
QUALITY_WEIGHT_LAYOUT=0.20

# 质量反思日志级别
REFLECTION_LOG_LEVEL=INFO

# 是否保存质量评估详情
SAVE_QUALITY_DETAILS=true

# ================================
# 错误恢复机制配置 (Phase2b新增)
# ================================

# 是否启用错误恢复机制
ENABLE_ERROR_RECOVERY=true

# 全局最大重试次数
MAX_GLOBAL_RETRIES=3

# 恢复延迟时间（秒）
RECOVERY_DELAY=2.0

# 是否启用AI一致性检查
ENABLE_AI_CONSISTENCY_CHECK=true

# 一致性检查阈值（0-100分）
CONSISTENCY_THRESHOLD=75